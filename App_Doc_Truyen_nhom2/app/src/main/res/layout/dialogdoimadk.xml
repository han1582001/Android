<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ MÃ ĐĂNG KÝ"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/titlema1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã A"
        android:textSize="15dp"
        android:layout_below="@+id/title"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        />

    <EditText
        android:id="@+id/txtma1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlema1"
        android:background="@drawable/stylethanhtimkiem"
        android:hint="Nhập Mã Mới"
        android:textSize="15dp"
        android:textColor="@color/black"

        />
    <TextView
        android:id="@+id/titlema2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã B"
        android:textSize="15dp"
        android:layout_below="@+id/txtma1"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/txtma2"
        android:layout_below="@id/titlema2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stylethanhtimkiem"
        android:hint="Nhập Mã Mới"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        />

    <ImageButton
        android:id="@+id/btnOK"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtma2"
        android:layout_alignParentLeft="true"
        android:background="@drawable/stylebtnmorong"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_add_24" />
    <ImageButton
        android:id="@+id/btnCANCEL"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/stylebtnxoa"
        android:src="@drawable/iconcancel"
        android:scaleType="fitCenter"
        android:layout_below="@+id/txtma2"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>