<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:translationZ="5dp"
    android:outlineSpotShadowColor="@color/black"
    android:background="@color/white"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    >
<TextView
    android:id="@+id/txtname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nguyễn Văn Hân"
    android:textStyle="bold"
    android:textSize="15dp"
    android:layout_alignParentTop="true"
    android:textColor="@color/black"
    />
    <TextView
        android:id="@+id/txtxemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtname"
        android:text="Email: "
        android:textSize="12dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtname"
        android:text="zedlmhthan@gmail.com"
        android:textSize="12dp"
        android:textStyle="italic"
        android:layout_toEndOf="@+id/txtxemail"
        android:textColor="@color/black"
        />
  <ImageButton
      android:id="@+id/btnxoatk"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:background="@drawable/stylebtnxoa"
      android:src="@drawable/ic_trash_solid"
      android:scaleType="fitCenter"
      android:layout_alignParentRight="true"
      />
</RelativeLayout>