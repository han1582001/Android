<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TaiKhoanFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn Hân"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
           android:padding="10dp"
            android:id="@+id/txtTen"
            />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iconupdatetruyen"
                android:background="@drawable/stylebtnupdate"
                android:scaleType="fitCenter"
android:id="@+id/btnsuaten"
                android:translationZ="10dp"
                />
        </LinearLayout>
        <TextView
            android:text="Tài Khoản Đóng Góp Truyện"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtemail"
            android:textStyle="italic"
            />

        <TextView
            android:text="Tài Khoản Đóng Góp Truyện"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtloaitk"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi Mã Đăng Ký"
            android:id="@+id/gotoduyettruyen"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00557C"
            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi Mật Khẩu"
            android:id="@+id/btndoimatkhau"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#0292D3"
            />



</LinearLayout>
</FrameLayout>