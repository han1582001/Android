<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bookstore"
    android:layout_width="match_parent"
    android:layout_height="130dp"

    android:layout_marginTop="5dp"
  android:paddingLeft="5dp"
    android:paddingRight="5dp"
android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:elevation="20dp"
    android:translationZ="5dp"
    android:outlineAmbientShadowColor="@color/black"
    >

    <ImageView
        android:id="@+id/imgtruyen"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/amtrungquy2"


        />


    <TextView
        android:id="@+id/txttentruyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/imgtruyen"
        android:text="Cực Phẩm Gia Đinh"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txttacgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttentruyen"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/imgtruyen"
        android:text="Tác giả:"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txttacgia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttentruyen"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/txttacgia"
        android:text="Vũ Nham"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txttheloai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttentruyen"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/txttacgia2"
        android:text="Thể Loại:"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txttheloai2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttentruyen"

        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/txttheloai"
        android:text="Cổ Đại"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtreview"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/txttacgia"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/imgtruyen"
        android:text="asdasdasdasdascasdasdadasaasdasdasdasdasdasdasdasdadadasddasasdasdasd..."
        android:textColor="@color/black"
        android:textSize="8sp"
        android:lineHeight="10dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txttinhtrang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtreview"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/imgtruyen"
        android:text="Đã Full"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtsochuong2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtreview"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/txttinhtrang"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtsochuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtreview"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/txtsochuong2"
        android:text="Chương"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/btndowloadtruyen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/stylebtnmorong"
        android:src="@drawable/ic_baseline_download_24"

        />


    <ProgressBar
        android:id="@+id/progesstaitruyen"
        style="?android:attr/progressBarStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txtprogess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:text="Chưa đọc"
        android:textColor="@color/black"
        android:textSize="10dp"
        />

</RelativeLayout>

