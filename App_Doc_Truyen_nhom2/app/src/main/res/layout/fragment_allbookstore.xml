<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.FragmentAllbookstore"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listbookstorelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:clipToPadding="false"
        android:elevation="5dp"
        android:paddingTop="45dp"
        android:paddingBottom="?attr/actionBarSize" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txtsearchtutruyen"
        android:textColor="@color/black"
        android:background="@drawable/stylethanhtimkiem"
        android:hint="Nhập Tên Truyện Cần Tìm"
        android:textColorHint="#979797"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/icsearchtusach"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"
        android:elevation="7dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />
    <TextView
        android:id="@+id/txtthongbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn chưa đọc truyện nào"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:elevation="7dp"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/progessbarallbook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:elevation="7dp"/>
</RelativeLayout>